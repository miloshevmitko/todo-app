{
  "name": "@todo-app/server",
  "version": "1.0.0",
  "description": "Server providing RESTful API endpoints for the Todo App client",
  "main": "build/index.js",
  "author": "miloshev.mitko@gmail.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./build",
    "build": "yarn clean && yarn build:js",
    "build:js": "babel --config-file ./babel.config.json --extensions .ts --out-dir ./build ./src",
    "start": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "start:prod": "node ./build/index.js",
    "test": "jest --watchAll",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongodb": "4.5.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "babel-plugin-module-resolver": "^5.0.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  }
}
